<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Enabled states -->
    <item android:state_checked="true" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/switch_bg_on" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/switch_bg_off" />

    <item android:state_checked="false"
          android:state_enabled="true"
          android:drawable="@drawable/switch_bg_off" />
    <item android:state_checked="true"
          android:state_enabled="true"
          android:drawable="@drawable/switch_bg_on" />


    <!-- Disabled states -->
    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/switch_bg_on_disabled" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/switch_bg_off_disabled" />

    <item android:state_checked="false" android:drawable="@drawable/switch_bg_off_disabled" />
    <item android:state_checked="true" android:drawable="@drawable/switch_bg_on_disabled" />

</selector>
